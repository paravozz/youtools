{
  "name": "youtools",
  "version": "1.0.4",
  "description": "collection of re-usable utils without need of having a dependency",
  "exports": "./dist/index.js",
  "bin": "./dist/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/paravozz/youtools.git"
  },
  "scripts": {
    "test": "vitest run",
    "dev": "tsup --watch",
    "build": "tsup",
    "vercel-build": "tsup transpiler/transpile.ts --format esm -d dist/vercel/api",
    "vercel-dev": "tsup transpiler/transpile.ts --format esm -d dist/vercel/api --watch"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "utils",
    "npx",
    "typescript"
  ],
  "author": "PRVZ <illia@prvz.dev> (https://prvz.dev)",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20",
    "eslint": "^8",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "typescript": "^5",
    "vitest": "^2.1.2"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "commander": "^12.1.0",
    "kleur": "^4.1.5",
    "tsup": "^8.3.0",
    "zod": "^3.23.8"
  }
}
